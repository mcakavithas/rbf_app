<div class="center hero-unit">
    <%= link_to "Add customer", new_customer_path %>

<h3>Customers Listing</h3>
<table cellpadding = "5px" cellspacing = "5px">
	<tr>
		<th>Customer Name</th>
		<th>Sex</th>
		<th>Date of birth</th>
		<th>Address</th>
		<th>City</th>
    <th>PAN</th>
    <th>Status</th>
    <th>Edit</th>
    <th>Delete</th>
    </tr>
<% @customers.each do |customer| %>
    <tr>
      <td><%= link_to "#{customer.first_name} #{customer.last_name}" , customer_path(customer)%></td>
      <td><%= customer.sex %></td>
      <td><%= customer.dob %></td>
      <td><%= customer.address %></td>
      <td><%= customer.city %></td>
      <td><%= customer.pan %></td>
      <td><%= customer.status %></td>

      <td><%= link_to "Edit",edit_customer_path(customer)%></td>
      <td><%= link_to "Delete",customer_path(customer),
      method: :delete, confirm: "Are You Sure?" %></td>
    </tr>
  <% end %>
</table>



</div>
<%= link_to image_tag("ruby.jpeg", alt: "Rails"), 'http://rubyonrails.org/' %>
